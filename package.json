{
  "name": "@24vlh/angular-tools",
  "version": "3.0.0",
  "description": "Small footprint library for Angular projects.",
  "author": "@vlah.io",
  "license": "Apache-2.0",
  "keywords": [
    "angular library",
    "angular redux store",
    "angular websockets",
    "angular server sent events"
  ],
  "scripts": {
    "build:angular-tools": "ng build angular-tools",
    "docs": "npx compodoc -p projects/angular-tools/tsconfig.lib.json -d documentation -s",
    "index:refresh:angular-tools": "node ./.24vlh/scan.js && git add ./projects/angular-tools/src/public-api.ts",
    "lint:angular-tools": "npx eslint projects/angular-tools/src/**/*.{ts,html} --fix",
    "ng": "ng",
    "prepare": "husky",
    "prettify:angular-tools": "npx prettier projects/angular-tools/src/**/*.{ts,html} --write",
    "start": "ng serve --poll=1000",
    "start:http": "ts-node .24vlh/http-server.ts",
    "start:sse": "ts-node .24vlh/server-sent-event-server.ts",
    "start:ws": "ts-node .24vlh/websocket-server.ts",
    "stylefy:angular-tools": "npx stylelint projects/angular-tools/src/**/*.{css,scss} --fix",
    "test:angular-tools": "ng test angular-tools --code-coverage ",
    "test:angular-tools-test-app": "ng test angular-tools-test",
    "watch": "ng build --watch --configuration development"
  },
  "lint-staged": {
    "*": [
      "npm run index:refresh:angular-tools"
    ],
    "projects/**/*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "projects/**/*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@24vlh/ts-assert": "^1.0.17",
    "@24vlh/ts-helpers": "^1.0.8",
    "@angular/animations": "^20.1.1",
    "@angular/common": "^20.1.1",
    "@angular/compiler": "^20.1.1",
    "@angular/core": "^20.1.1",
    "@angular/forms": "^20.1.1",
    "@angular/platform-browser": "^20.1.1",
    "@angular/platform-browser-dynamic": "^20.1.1",
    "@angular/router": "^20.1.1",
    "immutable": "^5.1.3",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.1",
    "@angular-eslint/builder": "^20.1.1",
    "@angular-eslint/eslint-plugin": "^20.1.1",
    "@angular-eslint/eslint-plugin-template": "^20.1.1",
    "@angular-eslint/schematics": "^20.1.1",
    "@angular-eslint/template-parser": "^20.1.1",
    "@angular-eslint/utils": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.1",
    "@compodoc/compodoc": "^1.1.26",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^10.0.0",
    "@types/jasmine": "^5.1.8",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "axios": "^1.10.0",
    "bootstrap": "^5.3.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "husky-init": "^8.0.0",
    "jasmine-core": "^5.8.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-edge-launcher": "^0.4.2",
    "karma-jasmine": "^5.1.0",
    "karma-mocha-reporter": "^2.2.5",
    "lint-staged": "^16.1.2",
    "multer": "^2.0.2",
    "ng-packagr": "^20.1.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.14.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^39.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "ws": "^8.18.3"
  }
}
